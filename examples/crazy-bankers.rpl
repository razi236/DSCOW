module CrazyBankers;
interface Account
{
    Int addBalance(Int bal);
    Int deductBalance(Int bal);
    Int getBalance();
}
class Account implements Account
{
    Int balance = 0;
    Int addBalance(Int bal)
    {
        balance = balance + bal;
        cost(1);
        return 0;
    }
    Int deductBalance(Int bal)
    {
        balance = balance - bal;
        cost(1);
        return 0;
    }
    Int getBalance()
    {
        return balance;
    }
}
interface Bankers
{
    Int distribute(Account t, Account f);
}
